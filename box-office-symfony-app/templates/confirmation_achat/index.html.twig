{% extends 'base.html.twig' %}

{% block title %}Paiement{% endblock %}
{% block javascripts %} <script type="text/javascript" src="{{ asset("js/match-billets.js") }}"></script> {% endblock %}
{% block body %}



<div class="billets-page-content">

    <div class="billets-form-content">
    
        <div class="billets-top">

            <div class="billets-image">
                <img src="{{ asset("images/openparc-logo.png") }}" alt="logo open parc">
            </div>

            <div class="billets-info">
                <header><strong>  {{date}} </strong></header> <!-- afficher infos du match sélectionnés -->
                <h2>  {{place}} </h2>

            </div>
            
        </div>

        <div class="billets-bottom">
            <form action="{{ path('paiement') }}" class="billets-form" method="post">

                <div class="billets-form-element element-borderbottom">
                    <label for="type-select">{{tarif}}</label>
                </div>

                <div class="billets-form-element element-borderbottom" id="ifL" style="display: none;">
                        <label  for="reduce_code"> Ajoutez votre n°Licence  </label> <input type="text" id="reduce_code" name="reduce_code" /><br/>
                
                    </div>

                    <div class="billets-form-element element-borderbottom" id="ifJDS" style="display: none;">
                        <label  for="reduce_code"> Ajoutez votre n°Associatif  </label> <input type="text" id="reduce_code" name="reduce_code" /><br/>
                
                    </div>

                   

                <div class="billets-form-element element-borderbottom" id="ifReduce" style="display:none;">
                    <label for="reduce_code"> Ajoutez votre n°Licence : </label> <input type="text" id="reduce_code" name="reduce_code" /><br/>
                
                </div>

                {% if type != 3 %}
                <div class="billets-form-element element-borderbottom">
                    <label for="nb-select">Nombre de place : {{ adulte }}</label>

                    
                </div>
                {% endif %}
                
                
                {% if type == 3 %}

                <div class="billets-form-element element-borderbottom">
                    <label for="nb-select">Nombre de place Adultes : {{ adulte }}</label>

                    

                </div>

                <div class="billets-form-element element-borderbottom">
                    <label for="nb-select">Nombre de place -12 : {{ child }}</label>

                    

                    </select>
                </div>

                {% endif %}

                <div class="billets-form-element element-borderbottom">
                    <label>Prix TTC : {{prix}}</label>
                </div>
                

                <div class="billets-form-button">
                    <button type="submit" class="billets-submit">
                        Confirmer l'achat
                    </button>
                </div>   

            </form>
        </div>



    </div>

</div>


{% endblock %}